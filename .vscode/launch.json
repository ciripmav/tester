{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Flask App",
        "type": "python",
        "request": "launch",
        "module": "flask",
        "env": {
          "FLASK_APP": "app.py",
          "FLASK_ENV": "development",
          "FLASK_RUN_PORT": "5000"
        },
        "args": [
          "run",
          "--no-debugger",
          "--no-reload"
        ],
        "jinja": true
      },
      {
        "name": "Open index.html",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:5000",
        "webRoot": "${workspaceFolder}"
      }
    ]
  }
  